{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "StarGen Tech Tree",
  "type": "object",
  "properties": {
    "techs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "tier": {
            "type": "integer",
            "minimum": 1
          },
          "branch": {
            "type": "string",
            "enum": [
              "energy",
              "logistics",
              "governance",
              "cognition"
            ]
          },
          "prereqs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dPhi": {
            "type": "number"
          },
          "dS": {
            "type": "number"
          },
          "dLambda": {
            "type": "number"
          }
        },
        "required": [
          "name",
          "tier",
          "branch",
          "dPhi",
          "dS",
          "dLambda"
        ]
      }
    }
  },
  "required": [
    "techs"
  ]
}